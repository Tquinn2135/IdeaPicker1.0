<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="IdeaPicker.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:IdeaPicker.Views"
    Shell.FlyoutBehavior="Disabled">
<TabBar>
    <Tab Icon="tabplusicon.png">
        <ShellContent 
            Title="Add Idea"
            ContentTemplate="{DataTemplate local:AddIdeaPage}"
            Route="MainPage" />
    </Tab>
    <Tab Icon="tabselectidea.png"> 
        <ShellContent
            Title="Select Idea" 
            ContentTemplate="{DataTemplate local:SelectIdeaPage}"
            Route="MainPage" />
    </Tab>
</TabBar>
    

</Shell>
