<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IdeaPicker.Views.SelectIdeaPage">
    <StackLayout Padding="20">
        <Label Text="Select A Random Idea" FontSize="Large" HorizontalOptions="Center"/>
        <Button x:Name="btnSelectIdea" Margin="20" Text="Select Idea" Clicked="BtnSelectIdea_OnClicked"/>
        <Label x:Name="lblFName" FontSize="Large" HorizontalOptions="Center"/>
        <Label x:Name="lblActivity" FontSize="Large" HorizontalOptions="Center"/>
    </StackLayout>
</ContentPage>